<% if flash[:notice] %>
 <%= flash[:notice] %>
 <% end %>

 <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Editing book</h1>
	
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
    <%= f.submit "Update Book" %>
    <% end %>

    <%= link_to "Show", book_path %>
    <%= link_to "back", books_path %>
