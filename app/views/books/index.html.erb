
	<div class="show_contents">
      <h1>Books</h1>
      <table>
      	<thead>
      		<tr>
             <th>タイトル</th>
             <th>ボディー</th>
            </tr>
        </thead>
        <tbody>
	  <% @books.each do |book| %>
	  <tr>
	    <td class="title"><%= book.title %></td>
	    <td class="body"><%= book.body %></td>
	    <td><%= link_to "Show", book_path(book) %></td>
	    <td><%= link_to "Edit", edit_book_path(book) %></td>
	    <td><%= link_to "Destroy" ,book_path(book), method: :delete %></td>
	  </tr>
	  <% end %>
	     
	 </tbody>
	</table>
    </div>







    <h1>New book</h1>
    <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book, url: '/books/') do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
    <%= f.submit "create Book" %>
    <% end %>
